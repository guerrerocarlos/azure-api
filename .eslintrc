# http://eslint.org/docs/user-guide/configuring
---
extends: eslint-config-airbnb/base

env:
  browser: false
  node: true
  mocha: true

rules:

  # WARNING
  no-unused-vars: 1

  # DISABLED
  new-cap: 0
  no-console: 0
  no-constant-condition: 0
  no-unused-expressions: 0
  no-use-before-define: 0
  padded-blocks: 0
